<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:columnCount="1"
    android:background="@drawable/gradient_a">
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:drawableRight="@drawable/rupiahh"
        android:textColor="#fff"
        android:text="Forex"
        android:id="@+id/TampilForex"></Button>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:textColor="#fff"
        android:drawableLeft="@drawable/student"
        android:text="Master Mahasiswa"
        android:id="@+id/ViewMahasiswa"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:drawableRight="@drawable/cuaca"
        android:textColor="#fff"
        android:text="Cuaca"
        android:id="@+id/MainActivityCuaca"></Button>


</GridLayout>